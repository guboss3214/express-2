extends layout

block content
  h1 Dashboard
  p Welcome to your dashboard, #{user.username}!
  
  .theme-switcher
    h2 Theme Settings
    button(onclick="setTheme('light-theme')") Light Theme
    button(onclick="setTheme('dark-theme')") Dark Theme
    
  .user-info
    h2 Your Information
    p Username: #{user.username}
    p You are logged in with JWT authentication 