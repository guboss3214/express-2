extends layout

block content
  h1 Dashboard
  p Welcome to your dashboard, #{user.email}!
  
  .theme-switcher
    h2 Theme Settings
    button(onclick="setTheme('light-theme')") Light Theme
    button(onclick="setTheme('dark-theme')") Dark Theme
    
  .user-info
    h2 Your Information
    p email: #{user.email}
    p You are logged in with JWT authentication 